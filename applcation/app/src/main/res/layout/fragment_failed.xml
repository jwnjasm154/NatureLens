<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FailedFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="270dp"
            android:layout_height="245dp"
            android:src="@drawable/image_test_fial"
            android:contentDescription="@string/we_cannot_identify_your_plant" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/we_re_sorry"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/we_cannot_identify_your_plant"
            android:textAlignment="center"
            android:textColor="@color/main_offGray"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/try_the_photo_again_from_a_different_angle"
            android:textAlignment="center"
            android:textColor="@color/main_offGray"
            android:textSize="16sp" />
    </LinearLayout>
</FrameLayout>